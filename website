  // --- RENDERING LOGIC ---

  function renderSuperchargerGrid(filterCategory) {
    const gridContainer = document.getElementById('superchargerGrid');
    gridContainer.innerHTML = '';
    
    const filteredStops = superchargerStops.filter(stop => 
      filterCategory === 'all' || stop.category === filterCategory
    );

    filteredStops.forEach(stop => {
      // Build amenities HTML
      const amenitiesHtml = stop.amenities.map(emoji => 
        `<span>${emoji}</span>`
      ).join('');

      // Image Placeholder Logic using Unsplash source
      // We use source.unsplash.com/featured/?{keywords}
      const imageUrl = `https://source.unsplash.com/featured/?${stop.imgKey}`;

      // Map link logic
      const mapLink = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(stop.location + " Tesla Supercharger")}`;

      // STALL COUNT REMOVED HERE

      const cardHtml = `
        <div class="supercharger-card" data-category="${stop.category}">
          <div class="card-image-container">
            <img src="${imageUrl}" alt="${stop.name}" class="card-image">
            <div class="location-badge">
               üìç ${stop.location}
            </div>
          </div>
          <div class="card-body">
            <div class="card-header">
              <h2>${stop.name}</h2>
            </div>
            
            <p class="card-hook">${stop.coolFactor}</p>
            
            <div class="card-specs">
              <div class="spec-item">
                <strong>${stop.power}</strong>
                Max Power
              </div>
              <div class="spec-item">
                <strong>${stop.category.toUpperCase()}</strong>
                Vibe
              </div>
            </div>
            
            <div class="card-footer">
              <div class="amenities-row">
                ${amenitiesHtml}
              </div>
              <a href="${mapLink}" target="_blank">Directions ‚Üí</a>
            </div>
          </div>
        </div>
      `;
      gridContainer.innerHTML += cardHtml;
    });
  }

  // Filter Click Handler
  function handleFilterClick(event) {
    if (event.target.classList.contains('filter-button')) {
      document.querySelectorAll('.filter-button').forEach(btn => 
        btn.classList.remove('active')
      );
      event.target.classList.add('active');
      const category = event.target.getAttribute('data-category');
      renderSuperchargerGrid(category);
    }
  }

  // Init
  document.addEventListener('DOMContentLoaded', () => {
    document.getElementById('categoryFilterBar').addEventListener('click', handleFilterClick);
    renderSuperchargerGrid('all');
  });
</script>

</body>
</html>
